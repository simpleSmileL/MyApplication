<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/dp_274"
    android:layout_height="@dimen/dp_400"
    android:background="@drawable/bg_write_3"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_30"
        android:text="预约用车时间"
        android:textColor="#000000"
        android:textSize="@dimen/sp_18"
        android:textStyle="bold" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_12">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tv_today"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_30"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_weight="2"
                android:background="@drawable/bg_sleect_press"
                android:gravity="center"
                android:text="今天"
                android:textColor="#ffffff"
                android:textSize="@dimen/sp_15" />

            <TextView
                android:id="@+id/tv_tomorrow"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_30"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_weight="2"
                android:background="@drawable/bg_normal"
                android:gravity="center"
                android:text="明天"
                android:textColor="#878787"
                android:textSize="@dimen/sp_15" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_hour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#0f9ceb"
            android:textSize="23sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" ："
            android:textColor="#0f9ceb"
            android:textSize="23sp" />

        <TextView
            android:id="@+id/tv_min"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#0f9ceb"
            android:textSize="23sp" />

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#eeeeee" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_weight="1"
        android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <com.yinbao.www.myapplication.widget.WheelView
            android:id="@+id/month"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:isCyclic="true"
            app:itemNumber="7"
            app:lineColor="#33000000"
            app:maskHeight="@dimen/dp_22"
            app:noEmpty="true"
            app:normalTextColor="#878787"
            app:normalTextSize="@dimen/sp_18"
            app:selectedTextColor="#0186fd"
            app:selectedTextSize="@dimen/sp_18"
            app:unitHeight="@dimen/dp_28" />

        <com.yinbao.www.myapplication.widget.WheelView
            android:id="@+id/day"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:isCyclic="true"
            app:itemNumber="7"
            app:lineColor="#33000000"
            app:maskHeight="@dimen/dp_22"
            app:noEmpty="true"
            app:normalTextColor="#878787"
            app:normalTextSize="@dimen/sp_18"
            app:selectedTextColor="#0186fd"
            app:selectedTextSize="@dimen/sp_18"
            app:unitHeight="@dimen/dp_28" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#eeeeee" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/staff_birthday_selection_cancel"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_46"
            android:layout_marginRight="@dimen/dp_11"
            android:layout_weight="1"
            android:gravity="center"
            android:text="取消"
            android:textColor="#878787"
            android:textSize="15sp" />

        <View
            android:background="#eeeeee"
            android:layout_width="1dp"
            android:layout_height="@dimen/dp_46"/>

        <TextView
            android:id="@+id/staff_birthday_selection_confrim"
            android:layout_width="0dp"
            android:layout_height="46dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="完成"
            android:textColor="#0f9ceb"
            android:textSize="15sp" />
    </LinearLayout>

</LinearLayout>
